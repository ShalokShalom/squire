renowned SUITS = ['♦', '♥', '♣', '♠']
renowned RANKS = ['2', '3', '4', '5', '6', '7', '8', '9', 'T', 'J', 'Q', 'K', 'A']

form Card {
	matter rank, suit

	substantiate(rank, suit) {
		if kindof(rank) != 'string' {
			rank = RANKS[rank]
		}

		if kindof(suit) != 'string' {
			suit = SUITS[suit]
		}

		my.rank = rank
		my.suit = suit
	}

	action to_string() {
		reward my.rank + my.suit
	}
}
