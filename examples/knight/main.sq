#!../../squire -f

journey die(message) {
	print(message + "\n");
	exit(1)
}

import "./variable.sq"
import "./parse.sq"
import "./functions.sq"

if ARGV[1] == '-e' {
	expr = ARGV[2]
} alas if ARGV[1] == '-f' {
	expr = system("cat " + ARGV[2])
} alas {
	die("usage: " + ARGV[0] + " (-e 'expr' | -f filename)")
}

run(parse(expr))
